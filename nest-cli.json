{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "plugins": ["@nestjs/swagger/plugin"],
    "assets": [
      { "include": "../src/config/*.yaml", "outDir": "./dist" },
      { "include": "../src/common/mail/templates/**", "outDir": "./dist" }
    ],
    "deleteOutDir": true
  }
}
